{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page-background">
    <header>
        {{> back-button}}
    </header>
    <form class="page-section">
        <h1 class="page-title">Реєстрація</h1>

        <div class="form">
            <div class="form-item">
                {{> field action="signupForm.change" label="Ел.адреса" type="email" name="email"
                placeholder="Ваш email"}}
                <span name="email" class="form-error">ПОМИЛКА</span>
            </div>
            <div class="form-item">
                {{> field-password action="signupForm.change" label="Пароль" type="password" name="password"
                placeholder="Ваш пароль"}}
                <span name="password" class="form-error">ПОМИЛКА</span>
            </div>
            <div class="form-item">
                {{> field-password action="signupForm.change" label="Пароль ще раз" type="password"
                name="passwordAgain"
                placeholder="Ваш пароль"}}
                <span name="passwordAgain" class="form-error">ПОМИЛКА</span>
            </div>

            <div class="form-item">
                {{> field-select action="signupForm.change" label="Роль" name="role"
                placeholder="Оберіть роль" list=data.role}}
                <span name="role" class="form-error">ПОМИЛКА</span>
            </div>

            <div class="form-item">
                {{> field-checkbox action="signupForm.change" label="Ви погоджуєтеся з правилами сервіса"
                name="isConfirm"}}
                <span name="isConfirm" class="form-error">ПОМИЛКА</span>
            </div>
        </div>

        <button onclick="signupForm.submit()" class="button button-disabled" type="button">Зареєструватися</button>

        <span class="alert alert-disabled ">Увага, помилка!</span>

        <span class="link-prefix">Маєте акаунт? <a href="/login" class="link">Увійти</a></span>


    </form>
</div>
